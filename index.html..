<style>
  body {
    font-family: Arial, sans-serif;
    text-align: center;
    background-color: #f0f0f0;
    margin: 0;
    padding: 20px;
  }
  h1 {
    color: #333;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(5, 80px);
    gap: 10px;
    justify-content: center;
    margin-top: 20px;
  }
  .square {
    width: 80px;
    height: 80px;
    background-color: #ccc;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    font-weight: bold;
    color: white;
    border-radius: 10px;
    font-size: 14px;
  }
  .preta { background-color: black; }
  .amarela { background-color: gold; color: black; }
</style>
